#include <stdio.h>
#include "balance.h"

int main() {
    int a[] = {4, 7, 2, 9, 1, 6};
    int n = sizeof(a) / sizeof(a[0]);
    int i;

    for (i = 0; i < n; i++) printf("%d ", a[i]);
    printf("\n");

    balance_array(a, n);

    for (i = 0; i < n; i++) printf("%d ", a[i]);

    return 0;
}
