#include <stdio.h>
#include <stdlib.h>
#include "matrixlib.h"

int main() {
    int n = 4, m = 5;
    int i, j;
    double a[10][10];

    for (i = 0; i < n; i++)
        for (j = 0; j < m; j++)
            a[i][j] = rand() % 10 - 5;

    for (i = 0; i < n; i++) {
        for (j = 0; j < m; j++)
            printf("%6.2f ", a[i][j]);
        printf("\n");
    }

    printf("\n");

    transform_matrix(a, n, m);

    printf("\n");

    for (i = 0; i < n; i++) {
        for (j = 0; j < m; j++)
            printf("%6.2f ", a[i][j]);
        printf("\n");
    }

    return 0;
}
