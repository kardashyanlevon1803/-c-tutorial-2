#include <math.h>
#include <stdio.h>
#include "matrixlib.h"

int transform_matrix(double a[][10], int n, int m) {
    int i, j;

    for (j = 0; j < m; j++) {
        int pos = 0, neg = 0;

        for (i = 0; i < n; i++) {
            a[i][j] = a[i][j] * acos((double)i / (i + j));
            if (a[i][j] > 0) pos++;
            else if (a[i][j] < 0) neg++;
        }

        printf("Column %d: +%d -%d\n", j, pos, neg);
    }

    return m;
}
